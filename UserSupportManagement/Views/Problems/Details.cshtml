@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService AuthorizationService
@using UserSupportManagement.Constants
@*@model UserSupportManagement.Models.Problem*@
@model UserSupportManagement.Models.SolutionViewModel


@{
    ViewData["Title"] = "Details";
}

<h1 class="text-center">Details</h1>

<div>
    @*<h4>Problem</h4>*@
    <hr />
    <dl class="row">
        <dt class = "col-sm-4">
           ProblemName
        </dt>
        <dd class = "col-sm-8">
            @Html.DisplayFor(model => model.Problem.ProblemName)
        </dd>
        <dt class = "col-sm-4">
            ProblemType
        </dt>
        <dd class = "col-sm-8">
             @Html.DisplayFor(model => model.Problem.ProblemType.ProblemTypeName)
        </dd>
        <dt class = "col-sm-4">
           StatusType
        </dt>
        <dd class = "col-sm-8">
            @Html.DisplayFor(model => model.Problem.StatusType.StatusTypeName)
        </dd>
        
        <dt class = "col-sm-4">
            ProblemDetails
        </dt>
        <dd class = "col-sm-8">
            @Html.DisplayFor(model => model.Problem.ProblemDetails)
        </dd>
        <dt class = "col-sm-4">
            CreatedBy
        </dt>
        <dd class = "col-sm-8">
            @Html.DisplayFor(model => model.Problem.CreatedBy)
        </dd>
        <dt class = "col-sm-4">
            CreatedDate
        </dt>
        <dd class = "col-sm-8">
            @Html.DisplayFor(model => model.Problem.CreatedDate)
        </dd>
        <dt class = "col-sm-4">
           ModifiedBy
        </dt>
        <dd class = "col-sm-8">
            @Html.DisplayFor(model => model.Problem.ModifiedBy)
        </dd>
        <dt class = "col-sm-4">
            ModifiedDate
        </dt>
        <dd class = "col-sm-8">
            @Html.DisplayFor(model => model.Problem.ModifiedDate)
        </dd>
        
        <dt class = "col-sm-4">
           IsActive
        </dt>
        <dd class = "col-sm-8">
            @Html.DisplayFor(model => model.Problem.IsActive)
        </dd>

        @*<dt class = "col-sm-4">
            Solution Details
        </dt>
        <dd class = "col-sm-8">
           @Html.DisplayFor(model => model.Solution.SolutionDetails)
        </dd>*@

    </dl>
</div>
<div>
    @if ((AuthorizationService.AuthorizeAsync(User, Permissions.Problems.Edit)).Result.Succeeded)
    {
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Problem.ProblemId"><i class="fas fa-pencil-alt"></i> Edit </a>
    }
    
    <a class="btn btn-primary" asp-action="Index">Back to List</a>
</div>
