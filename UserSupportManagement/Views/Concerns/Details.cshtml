@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService AuthorizationService
@using UserSupportManagement.Constants
@model UserSupportManagement.Models.Concern

@{
    ViewData["Title"] = "Details";
}

<h1 class="text-center">Details</h1>

<div>
    @*<h4>Concern</h4>*@
    <hr />
    <dl class="row">
        <dt class = "col-sm-4">
            Concern Name
        </dt>
        <dd class = "col-sm-8">
            @Html.DisplayFor(model => model.ConcernName)
        </dd>
        
        <dt class = "col-sm-4">
            Concern Short Name
        </dt>
        <dd class = "col-sm-8">
            @Html.DisplayFor(model => model.ConcernShortName)
        </dd>
        
        <dt class = "col-sm-4">
            CreatedBy
        </dt>
        <dd class = "col-sm-8">
            @Html.DisplayFor(model => model.CreatedBy)
        </dd>

        <dt class = "col-sm-4">
            CreatedDate
        </dt>
        <dd class = "col-sm-8">
            @Html.DisplayFor(model => model.CreatedDate)
        </dd>

        <dt class = "col-sm-4">
            ModifiedBy
        </dt>
        <dd class = "col-sm-8">
            @Html.DisplayFor(model => model.ModifiedBy)
        </dd>

        <dt class = "col-sm-4">
            ModifiedDate
        </dt>
        <dd class = "col-sm-8">
            @Html.DisplayFor(model => model.ModifiedDate)
        </dd>

        <dt class = "col-sm-4">
            IsActive
        </dt>
        <dd class = "col-sm-8">
            @Html.DisplayFor(model => model.IsActive)
        </dd>
    </dl>
</div>
<div>
    @if ((AuthorizationService.AuthorizeAsync(User, Permissions.Concerns.Edit)).Result.Succeeded)
    {
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.ConcernId"><i class="fas fa-pencil-alt"></i> Edit </a>
    }
    
    <a class="btn btn-primary" asp-action="Index">Back to List</a>
</div>
