@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService AuthorizationService
@using UserSupportManagement.Constants
@model UserSupportManagement.Models.Concern

@{
    ViewData["Title"] = "Details";
}

<h1 class="text-center">Details</h1>
<hr />

<div>
    @*<h4>Concern</h4>*@
    <div class="row justify-content-md-center">
        <div class="col col-md-2"></div>
        <div class="col col-md-8">
            <dl class="row">
                <dt class = "col-sm-4">
                    Concern Name
                </dt>
                <dd class = "col-sm-8">
                    @Html.DisplayFor(model => model.ConcernName)
                </dd>
        
                <dt class = "col-sm-4">
                    Concern Short Name
                </dt>
                <dd class = "col-sm-8">
                    @Html.DisplayFor(model => model.ConcernShortName)
                </dd>
        
                <dt class = "col-sm-4">
                    CreatedBy
                </dt>
                <dd class = "col-sm-8">
                    @Html.DisplayFor(model => model.CreatedBy)
                </dd>

                <dt class = "col-sm-4">
                    CreatedDate
                </dt>
                <dd class = "col-sm-8">
                    @Html.DisplayFor(model => model.CreatedDate)
                </dd>

                <dt class = "col-sm-4">
                    ModifiedBy
                </dt>
                <dd class = "col-sm-8">
                    @Html.DisplayFor(model => model.ModifiedBy)
                </dd>

                <dt class = "col-sm-4">
                    ModifiedDate
                </dt>
                <dd class = "col-sm-8">
                    @Html.DisplayFor(model => model.ModifiedDate)
                </dd>

                <dt class = "col-sm-4">
                    IsActive
                </dt>
                <dd class = "col-sm-8">
                    @Html.DisplayFor(model => model.IsActive)
                </dd>
            </dl>
        </div>
        <div class="col col-md-2"></div>

    </div>
    
</div>
<div class="row justify-content-md-center">
    <div class="col col-md-2"></div>
    <div class="col col-md-6">
        @if ((AuthorizationService.AuthorizeAsync(User, Permissions.Concerns.Edit)).Result.Succeeded)
        {
            <a class="btn btn-success btn-block" asp-action="Edit" asp-route-id="@Model.ConcernId"><i class="fas fa-pencil-alt"></i> Edit </a>
        }

        <a class="btn btn-primary btn-block" asp-action="Index">Back to List</a>
    </div>
    <div class="col col-md-2"></div>
    
</div>
