@using Microsoft.AspNetCore.Identity
@using UserSupportManagement.Constants
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@inject RoleManager<IdentityRole> RoleManager

@{
     var user = await UserManager.GetUserAsync(User);
}

@*@{
    var role = await RoleManager.GetRoleNameAsync(Role);
}*@


<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    @if (User.IsInRole("SuperAdmin"))
    {
        <li class="">
           <div class="btn-group">
               <button type="button" class="btn btn-default dropdown-toggle text-white pr-1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                   Menu
               </button>
               <div class="dropdown-menu shadow animated--grow-in">    
                   <a class="dropdown-item" asp-controller="UserRoles" asp-action="Index">Users</a>
                   <a class="dropdown-item" asp-controller="Roles" asp-action="Index">Roles</a>
                   <a class="dropdown-item" asp-controller="Concerns" asp-action="Index">Concerns</a>                                  
                   <a class="dropdown-item" asp-controller="Vendors" asp-action="Index">Vendors</a>                   
                   <a class="dropdown-item" asp-controller="ProblemTypes" asp-action="Index">ProblemTypes</a>
                   <a class="dropdown-item" asp-controller="StatusTypes" asp-action="Index">StatusTypes</a>
                   <a class="dropdown-item" asp-controller="Problems" asp-action="Index">Problems</a>
                   <a class="dropdown-item" asp-controller="Solutions" asp-action="Index">Solutions</a>
                   <a class="dropdown-item" asp-controller="Orders" asp-action="Index">Orders</a>
               </div>
           </div>
        </li>

        <li class="nav-item">
            <a class="nav-link" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </li>
    }

    @if (User.IsInRole("Basic"))
    {
        <li class="mr-auto">
            <div class="btn-group">
                <button type="button" class="btn btn-default dropdown-toggle text-white pr-1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Menu
                </button>
                <div class="dropdown-menu shadow animated--grow-in">
                    <a class="dropdown-item" asp-controller="Problems" asp-action="Index">Problems</a>
                    <a class="dropdown-item" asp-controller="Solutions" asp-action="Index">Solutions</a>
              
                </div>
            </div>
        </li>
    }

    <li class="nav-item">
        @*<a  class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @user.EmployeeName!</a>*@
        <a  class="nav-link " asp-area="" asp-page="" title="Manage">Hello @user.EmployeeName!</a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="nav-link btn btn-link">Logout</button>
        </form>
    </li>
}
else
{
    @*<li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>*@
    <li class="nav-item">
        <a class="nav-link" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
