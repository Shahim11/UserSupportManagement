@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService AuthorizationService
@using UserSupportManagement.Constants
@model UserSupportManagement.Models.StatusType

@{
    ViewData["Title"] = "Details";
}

<div class="container pb-3">
    <h1 class="text-center mt-3">Details</h1>
    <hr />
    <div class="row justify-content-md-center">
        <div class="col col-md-3"></div>
        <div class="col col-md-6">
            @*<h4>StatusType</h4>*@
            <dl class="row">
                <dt class="col-sm-5">
                    @Html.DisplayNameFor(model => model.StatusTypeName)
                </dt>
                <dd class="col-sm-7">
                    @Html.DisplayFor(model => model.StatusTypeName)
                </dd>
                <dt class = "col-sm-5">
                    @Html.DisplayNameFor(model => model.StatusTypeValue)
                </dt>
                <dd class = "col-sm-7">
                    @Html.DisplayFor(model => model.StatusTypeValue)
                </dd>
                <dt class="col-sm-5">
                    @Html.DisplayNameFor(model => model.CreatedBy)
                </dt>
                <dd class="col-sm-7">
                    @Html.DisplayFor(model => model.CreatedBy)
                </dd>
                <dt class="col-sm-5">
                    @Html.DisplayNameFor(model => model.CreatedDate)
                </dt>
                <dd class="col-sm-7">
                    @Html.DisplayFor(model => model.CreatedDate)
                </dd>
                <dt class="col-sm-5">
                    @Html.DisplayNameFor(model => model.ModifiedBy)
                </dt>
                <dd class="col-sm-7">
                    @Html.DisplayFor(model => model.ModifiedBy)
                </dd>
                <dt class="col-sm-5">
                    @Html.DisplayNameFor(model => model.ModifiedDate)
                </dt>
                <dd class="col-sm-7">
                    @Html.DisplayFor(model => model.ModifiedDate)
                </dd>

                <dt class="col-sm-5">
                    @Html.DisplayNameFor(model => model.IsActive)
                </dt>
                <dd class="col-sm-7">
                    @Html.DisplayFor(model => model.IsActive)
                </dd>
            </dl>
        </div>
        <div class="col col-md-3"></div>
    </div>
    <div class="row justify-content-md-center">
        <div class="col col-md-3"></div>
        <div class="col col-md-6">
            @if ((AuthorizationService.AuthorizeAsync(User, Permissions.StatusTypes.Edit)).Result.Succeeded)
            {
                <a class="btn btn-success" asp-action="Edit" asp-route-id="@Model.StatusTypeId"><i class="fas fa-pencil-alt"></i> Edit </a>
            }

            <a class="btn btn-primary btn-block" asp-action="Index">Back to List</a>
        </div>
        <div class="col col-md-3"></div>
    </div>
</div>




