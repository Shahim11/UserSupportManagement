@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService AuthorizationService
@using UserSupportManagement.Constants
@model UserSupportManagement.Models.Solution

@{
    ViewData["Title"] = "Details";
}
<div class="container pb-5">
    <h1 class="text-center mt-3">Details</h1>
<hr />
<div class="row justify-content-md-center">
    <div class="col col-md-2"></div>
    <div class="col col-md-8">
        <dl class="row">
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Problem)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Problem.ProblemName)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.StatusType)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.StatusType.StatusTypeName)
            </dd>
            <hr />
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.SolutionDetails)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.SolutionDetails)
            </dd>
            <hr />
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.CreatedBy)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.CreatedBy)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.CreatedDate)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.CreatedDate)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.ModifiedBy)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.ModifiedBy)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.ModifiedDate)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.ModifiedDate)
            </dd>

            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.IsActive)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.IsActive)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.IsDeleted)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.IsDeleted)
            </dd>
        </dl>
    </div>
    <div class="col col-md-2"></div>
    @*<h4>Solution</h4>*@
</div>

<div class="row justify-content-md-center">
    <div class="col col-md-3"></div>
    <div class="col col-md-6">
        @if ((AuthorizationService.AuthorizeAsync(User, Permissions.Solutions.Edit)).Result.Succeeded)
        {
            <a class="btn btn-success btn-block" asp-action="Edit" asp-route-id="@Model.SolutionId"><i class="fas fa-pencil-alt"></i> Edit </a>
        }

        <a class="btn btn-primary btn-block" asp-action="Index">Back to List</a>
    </div>
    <div class="col col-md-3"></div>
</div>
