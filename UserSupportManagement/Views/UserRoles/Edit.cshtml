@using Microsoft.AspNetCore.Identity
@model UserSupportManagement.Models.ManageUserRolesViewModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var role = (List<IdentityRole>)ViewData["role"];
}

<div class="mt-4">
    <div class="container">
        <form method="post">
            <div class="card">
                <div class="card-header">
                    <h1 class="text-center">Manage User Roles</h1>
                    <h3 class="text-center">
                        Add/Remove Roles for <span class="text-primary">@ViewBag.EmpName (@ViewBag.EmpId)</span> 
                    </h3>
                </div>
                <div class="card-body">
                    <h3 class="text-center">
                        Current Role <span class="text-primary">@ViewBag.RoleName</span> 
                    </h3>
                    <h2 class="text-left">Select New Role</h2>
                    <div class="form-group">
                        <label asp-for="RoleId" class="control-label">Role Name</label>
                        <select asp-for="RoleId" class="form-control text-center" asp-items="ViewBag.RoleId"></select>
                        <span asp-validation-for="RoleId" class="text-danger"></span>
                    </div>

                    @*@for (int i = 0; i < Model.Count; i++)
                    {
                        <div class="form-check m-1">
                            <input type="hidden" asp-for="@Model[i].RoleId"/>
                            <input type="hidden" asp-for="@Model[i].RoleName"/>
                            <input asp-for="@Model[i].Selected" class="form-check-input"/>
                            <label class="form-check-label" asp-for="@Model[i].Selected">
                                @Model[i].RoleName
                            </label>
                        </div>
                    }*@
                    <div asp-validation-summary="All" class="text-danger"></div>
                </div>
                <div class="card-footer">
                    <input type="submit" value="Update" class="btn btn-primary"
                           style="width:auto" />
                    <a asp-action="Index" asp-route-id="@ViewBag.userId"
                       class="btn btn-primary" style="width:auto">Cancel</a>
                </div>
            </div>
        </form>
    </div>

</div>
