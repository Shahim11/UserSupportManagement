@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<section class="login-section login-bg">
    <div class="container-fluid">
        <div class="row justify-content-md-center">
            <div class="col col-md-4.5"></div>
            <div class="col col-md-3 login-glass-bg text-center text-white">
                <section>
                    <h1 class="mt-2">@ViewData["Title"]</h1>
                    <div class="login-form-icon text-center mt-3">
                        <i class="fas fa-user-circle fa-9x text-light"></i>
                    </div>
                    <form id="account" method="post">
                        @*<h4>Use a local account to log in.</h4>*@
                        <hr/>
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Input.Email"></label>
                            <input asp-for="Input.Email" class="form-control box-style ps-5"/>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Password"></label>
                            <input asp-for="Input.Password" class="form-control box-style ps-5"/>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <div class="checkbox">
                                <label asp-for="Input.RememberMe">
                                    <input asp-for="Input.RememberMe"/>
                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                </label>
                            </div>
                        </div>
                        <div class="form-group d-grid gap-2 mt-2 mb-3">
                            <button type="submit" class="btn btn-primary btn-block box-style">Log in</button>
                        </div>
                    </form>
                </section>
            </div>
            <div class="col col-md-4.5">
            </div>
        </div>
    </div>
    
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
